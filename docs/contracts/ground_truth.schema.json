{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purple-axiom.local/contracts/ground_truth.schema.json",
  "title": "Purple Axiom Ground Truth Action",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "timestamp_utc",
    "run_id",
    "scenario_id",
    "scenario_version",
    "action_id",
    "action_key",
    "engine",
    "engine_test_id",
    "technique_id",
    "target_asset_id",
    "command_summary",
    "parameters",
    "cleanup"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "scenario_id": {
      "type": "string",
      "minLength": 1
    },
    "scenario_version": {
      "type": "string",
      "minLength": 1
    },
    "action_id": {
      "type": "string",
      "minLength": 1
    },
    "action_key": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$"
    },
    "engine": {
      "type": "string",
      "enum": [
        "atomic",
        "caldera",
        "custom"
      ]
    },
    "engine_test_id": {
      "type": "string",
      "minLength": 1
    },
    "technique_id": {
      "type": "string",
      "pattern": "^T\\d{4}(?:\\.\\d{3})?$"
    },
    "target_asset_id": {
      "type": "string",
      "minLength": 1
    },
    "resolved_target": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hostname": {
          "type": "string"
        },
        "ip": {
          "type": "string"
        },
        "provider_asset_ref": {
          "type": "string"
        }
      }
    },
    "command_summary": {
      "type": "string",
      "minLength": 1
    },
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "resolved_inputs_sha256"
      ],
      "properties": {
        "input_args_redacted": {
          "type": "object",
          "additionalProperties": true
        },
        "input_args_sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "resolved_inputs_sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        }
      }
    },
    "criteria_ref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "criteria_pack_id": {
          "type": "string"
        },
        "criteria_pack_version": {
          "type": "string"
        },
        "criteria_entry_id": {
          "type": "string"
        }
      }
    },
    "expected_telemetry_hints": {
      "type": "object",
      "additionalProperties": true
    },
    "cleanup": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "invoked",
        "status",
        "verification"
      ],
      "properties": {
        "invoked": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "enum": [
            "success",
            "failed",
            "skipped",
            "not_applicable"
          ]
        },
        "verification": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string",
              "enum": [
                "success",
                "failed",
                "skipped",
                "not_applicable"
              ]
            },
            "results_ref": {
              "type": "string"
            }
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
