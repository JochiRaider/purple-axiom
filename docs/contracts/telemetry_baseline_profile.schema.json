{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Telemetry baseline profile",
  "description": "Contract-backed input describing minimum expected telemetry signals per asset selector for telemetry readiness gating.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "profile_id",
    "profile_version",
    "profiles"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "profile_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^[a-z0-9][a-z0-9_.\\-]{0,63}$"
    },
    "profile_version": {
      "type": "string",
      "minLength": 5,
      "maxLength": 64,
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "description": {
      "type": "string",
      "maxLength": 4096
    },
    "profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/profile"
      }
    }
  },
  "$defs": {
    "selector": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "asset_ids": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "os": {
          "type": "string",
          "enum": [
            "windows",
            "linux",
            "macos",
            "bsd",
            "appliance",
            "other"
          ]
        },
        "role": {
          "type": "string",
          "enum": [
            "endpoint",
            "server",
            "domain_controller",
            "network",
            "sensor",
            "other"
          ]
        },
        "tags_all": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          }
        },
        "tags_any": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          }
        }
      }
    },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "profile_id",
        "priority",
        "selector",
        "required_signals"
      ],
      "properties": {
        "profile_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "pattern": "^[a-z0-9][a-z0-9_.\\-]{0,63}$"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000
        },
        "selector": {
          "$ref": "#/$defs/selector"
        },
        "required_signals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/signal"
          }
        },
        "notes": {
          "type": "string",
          "maxLength": 1024
        }
      }
    },
    "signal": {
      "oneOf": [
        {
          "$ref": "#/$defs/windows_eventlog_signal"
        },
        {
          "$ref": "#/$defs/osquery_signal"
        }
      ]
    },
    "windows_eventlog_signal": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "signal_id",
        "source_type",
        "min_count",
        "match"
      ],
      "properties": {
        "signal_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^[a-z0-9][a-z0-9_.\\-]{0,127}$"
        },
        "source_type": {
          "const": "windows_eventlog"
        },
        "min_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000
        },
        "match": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "channel"
          ],
          "properties": {
            "channel": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "provider": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "event_id": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            }
          }
        },
        "notes": {
          "type": "string",
          "maxLength": 1024
        }
      }
    },
    "osquery_signal": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "signal_id",
        "source_type",
        "min_count",
        "match"
      ],
      "properties": {
        "signal_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^[a-z0-9][a-z0-9_.\\-]{0,127}$"
        },
        "source_type": {
          "const": "osquery"
        },
        "min_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000
        },
        "match": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "action": {
              "type": "string",
              "enum": [
                "added",
                "removed",
                "snapshot"
              ]
            }
          }
        },
        "notes": {
          "type": "string",
          "maxLength": 1024
        }
      }
    }
  }
}
