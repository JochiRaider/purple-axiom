{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "docs/contracts/bridge_router_table.schema.json",
  "title": "Purple Axiom Sigma Logsource Router Table Snapshot",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "generated_at_utc",
    "ocsf_version",
    "router_table_id",
    "router_table_version",
    "router_table_sha256",
    "routes"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "ocsf_version": {
      "type": "string",
      "minLength": 1
    },
    "router_table_id": {
      "type": "string",
      "minLength": 1
    },
    "router_table_version": {
      "type": "string",
      "minLength": 1
    },
    "router_table_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "origin": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "routes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "sigma_logsource",
          "ocsf_scope"
        ],
        "properties": {
          "sigma_logsource": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "category"
            ],
            "properties": {
              "category": {
                "type": "string",
                "minLength": 1
              },
              "product": {
                "type": "string"
              },
              "service": {
                "type": "string"
              }
            }
          },
          "ocsf_scope": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "class_uids"
            ],
            "properties": {
              "class_uids": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "category_uids": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "default_activity_id": {
                "type": "integer",
                "minimum": 0
              },
              "notes": {
                "type": "string"
              }
            }
          },
          "filters": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "path",
                "op"
              ],
              "properties": {
                "path": {
                  "type": "string",
                  "minLength": 1
                },
                "op": {
                  "type": "string",
                  "enum": [
                    "eq",
                    "neq",
                    "in",
                    "nin",
                    "exists",
                    "contains",
                    "prefix",
                    "suffix",
                    "regex"
                  ]
                },
                "value": {},
                "notes": {
                  "type": "string"
                }
              }
            }
          },
          "extensions": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
