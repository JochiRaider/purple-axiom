{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "docs/contracts/mapping_profile_snapshot.schema.json",
  "title": "Purple Axiom Normalization Mapping Profile Snapshot",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "run_id",
    "scenario_id",
    "generated_at_utc",
    "ocsf_version",
    "mapping_profile_id",
    "mapping_profile_version",
    "mapping_profile_sha256",
    "source_profiles"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "scenario_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "ocsf_version": {
      "type": "string",
      "minLength": 1
    },
    "mapping_profile_id": {
      "type": "string",
      "minLength": 1
    },
    "mapping_profile_version": {
      "type": "string",
      "minLength": 1
    },
    "mapping_profile_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "source_profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "source_type",
          "mapping_material_sha256"
        ],
        "properties": {
          "source_type": {
            "type": "string",
            "minLength": 1
          },
          "profile": {
            "type": "string"
          },
          "discriminator": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "matched_field"
            ],
            "properties": {
              "matched_field": {
                "type": "string",
                "minLength": 1
              },
              "notes": {
                "type": "string"
              }
            }
          },
          "timestamp": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "field"
            ],
            "properties": {
              "field": {
                "type": "string",
                "minLength": 1
              },
              "format": {
                "type": "string"
              },
              "timezone": {
                "type": "string"
              }
            }
          },
          "mapping_material": {
            "type": "object",
            "description": "Optional embedded mapping material as used by the normalizer. If omitted, mapping_files MUST be present.",
            "additionalProperties": true
          },
          "mapping_files": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "path",
                "sha256"
              ],
              "properties": {
                "path": {
                  "type": "string",
                  "minLength": 1
                },
                "sha256": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$"
                }
              }
            }
          },
          "mapping_material_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "origin": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "kind"
            ],
            "properties": {
              "kind": {
                "type": "string",
                "minLength": 1
              },
              "repo": {
                "type": "string"
              },
              "ref": {
                "type": "string"
              },
              "notes": {
                "type": "string"
              }
            }
          },
          "extensions": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "mapping_material": {
                  "type": "object"
                }
              },
              "required": [
                "mapping_material"
              ]
            },
            "then": {},
            "else": {
              "required": [
                "mapping_files"
              ]
            }
          }
        ]
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    },
    "placeholder": {
      "$ref": "#/$defs/pa_placeholder_v1"
    }
  },
  "$defs": {
    "pa_placeholder_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "placeholder_version",
        "handling",
        "reason_code",
        "reason_domain"
      ],
      "properties": {
        "placeholder_version": {
          "type": "string",
          "const": "pa.placeholder.v1"
        },
        "handling": {
          "type": "string",
          "enum": [
            "withheld",
            "quarantined",
            "absent"
          ]
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "reason_domain": {
          "type": "string",
          "const": "artifact_placeholder"
        },
        "sha256": {
          "type": "string",
          "pattern": "^sha256:[0-9a-f]{64}$"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "handling": {
                "const": "absent"
              }
            },
            "required": [
              "handling"
            ]
          },
          "then": {
            "properties": {
              "sha256": false
            }
          }
        }
      ]
    }
  }
}
