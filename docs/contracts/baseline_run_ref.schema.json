{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "baseline_run_ref.schema.json",
  "title": "Baseline run reference",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "contract_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "baseline_run_id": {
      "type": "string",
      "minLength": 1
    },
    "baseline_manifest_path": {
      "type": "string",
      "minLength": 1
    },
    "baseline_manifest_ref": {
      "type": "string",
      "minLength": 1,
      "description": "Resolvable reference to the baseline manifest (e.g., runs/<id>/manifest.json or an external ref)."
    },
    "baseline_manifest_sha256": {
      "type": "string",
      "pattern": "^sha256:[0-9a-fA-F]{64}$"
    },
    "placeholder": {
      "$ref": "#/$defs/pa_placeholder_v1"
    }
  },
  "required": [
    "contract_version",
    "baseline_manifest_ref"
  ],
  "oneOf": [
    {
      "required": [
        "baseline_run_id"
      ]
    },
    {
      "required": [
        "baseline_manifest_path"
      ]
    }
  ],
  "$defs": {
    "pa_placeholder_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "placeholder_version",
        "handling",
        "reason_code",
        "reason_domain"
      ],
      "properties": {
        "placeholder_version": {
          "type": "string",
          "const": "pa.placeholder.v1"
        },
        "handling": {
          "type": "string",
          "enum": [
            "withheld",
            "quarantined",
            "absent"
          ]
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "reason_domain": {
          "type": "string",
          "const": "artifact_placeholder"
        },
        "sha256": {
          "type": "string",
          "pattern": "^sha256:[0-9a-f]{64}$"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "handling": {
                "const": "absent"
              }
            },
            "required": [
              "handling"
            ]
          },
          "then": {
            "properties": {
              "sha256": false
            }
          }
        }
      ]
    }
  }
}
