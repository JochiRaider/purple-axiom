{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "docs/contracts/run_results.schema.json",
  "title": "Purple Axiom Run Results Summary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "run_id",
    "status",
    "counts",
    "metrics",
    "pointers"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "run_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "success",
        "partial",
        "failed"
      ],
      "description": "Overall run status summary."
    },
    "counts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "actions",
        "stages"
      ],
      "properties": {
        "actions": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "success",
            "failed",
            "skipped"
          ],
          "properties": {
            "success": {
              "type": "integer",
              "minimum": 0
            },
            "failed": {
              "type": "integer",
              "minimum": 0
            },
            "skipped": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "stages": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "success",
            "failed",
            "skipped"
          ],
          "properties": {
            "success": {
              "type": "integer",
              "minimum": 0
            },
            "failed": {
              "type": "integer",
              "minimum": 0
            },
            "skipped": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "technique_coverage_rate",
        "detection_latency_p95_seconds",
        "tier1_field_coverage_pct"
      ],
      "properties": {
        "technique_coverage_rate": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        },
        "detection_latency_p95_seconds": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0
        },
        "tier1_field_coverage_pct": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "pointers": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "manifest",
        "health",
        "report_json"
      ],
      "properties": {
        "manifest": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "health": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "report_json": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        }
      }
    },
    "placeholder": {
      "$ref": "#/$defs/pa_placeholder_v1"
    }
  },
  "$defs": {
    "pa_placeholder_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "placeholder_version",
        "handling",
        "reason_code",
        "reason_domain"
      ],
      "properties": {
        "placeholder_version": {
          "type": "string",
          "const": "pa.placeholder.v1"
        },
        "handling": {
          "type": "string",
          "enum": [
            "withheld",
            "quarantined",
            "absent"
          ]
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "reason_domain": {
          "type": "string",
          "const": "artifact_placeholder"
        },
        "sha256": {
          "type": "string",
          "pattern": "^sha256:[0-9a-f]{64}$"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "handling": {
                "const": "absent"
              }
            },
            "required": [
              "handling"
            ]
          },
          "then": {
            "properties": {
              "sha256": false
            }
          }
        }
      ]
    }
  }
}
