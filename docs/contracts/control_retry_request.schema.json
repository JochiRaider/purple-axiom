{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "docs/contracts/Control_retry_request.schema.json",
  "title": "Control retry request",
  "description": "Contract schema for run-relative operator retry requests (control-plane).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "schema_version",
    "request_id",
    "requested_at",
    "requested_by",
    "scope",
    "override_drift"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "const": "0.2.0",
      "description": "Contract SemVer; MUST match the contract registry entry."
    },
    "schema_version": {
      "type": "string",
      "const": "pa:Control_retry_request:v1",
      "description": "Schema identifier for this artifact type."
    },
    "request_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "UUID that correlates this request to audit log entries."
    },
    "requested_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp for when the request was issued."
    },
    "requested_by": {
      "type": "string",
      "minLength": 1,
      "description": "Stable actor identifier (for example a username or \"cli\")."
    },
    "scope": {
      "type": "string",
      "enum": [
        "run",
        "stage",
        "action"
      ],
      "description": "Target scope. v0.2 MUST support scope=\"run\"; other scopes are reserved."
    },
    "target": {
      "type": "object",
      "description": "Scope-dependent target selector. For scope=\"run\", this MUST be empty or omitted.",
      "additionalProperties": false,
      "properties": {
        "stage": {
          "type": "string",
          "minLength": 1,
          "description": "Stable stage identifier when scope=\"stage\"."
        },
        "action_id": {
          "type": "string",
          "minLength": 1,
          "description": "action_id from ground_truth.jsonl when scope=\"action\"."
        }
      },
      "maxProperties": 1
    },
    "override_drift": {
      "type": "boolean",
      "default": false,
      "description": "If true, allows resuming/retrying when pinned inputs drifted."
    },
    "reason": {
      "type": "string",
      "description": "Optional redaction-safe free text reason for operator intent."
    },
    "placeholder": {
      "$ref": "#/$defs/pa_placeholder_v1"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "scope": {
            "const": "run"
          }
        }
      },
      "then": {
        "properties": {
          "target": {
            "type": "object",
            "additionalProperties": false,
            "maxProperties": 0
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "scope": {
            "const": "stage"
          }
        }
      },
      "then": {
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "stage"
            ],
            "properties": {
              "stage": {
                "type": "string",
                "minLength": 1
              },
              "action_id": false
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "scope": {
            "const": "action"
          }
        }
      },
      "then": {
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "action_id"
            ],
            "properties": {
              "action_id": {
                "type": "string",
                "minLength": 1
              },
              "stage": false
            }
          }
        }
      }
    }
  ],
  "$defs": {
    "pa_placeholder_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "placeholder_version",
        "handling",
        "reason_code",
        "reason_domain"
      ],
      "properties": {
        "placeholder_version": {
          "type": "string",
          "const": "pa.placeholder.v1"
        },
        "handling": {
          "type": "string",
          "enum": [
            "withheld",
            "quarantined",
            "absent"
          ]
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "reason_domain": {
          "type": "string",
          "const": "artifact_placeholder"
        },
        "sha256": {
          "type": "string",
          "pattern": "^sha256:[0-9a-f]{64}$"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "handling": {
                "const": "absent"
              }
            },
            "required": [
              "handling"
            ]
          },
          "then": {
            "properties": {
              "sha256": false
            }
          }
        }
      ]
    }
  }
}
