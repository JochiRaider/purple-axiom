{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purple-axiom.local/contracts/evaluator_conformance_report.schema.json",
  "title": "Evaluator Conformance Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "report_id",
    "generated_at_utc",
    "backend",
    "toolchain",
    "fixtures",
    "cases",
    "summary"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "report_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "backend": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "version"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "settings": {
          "type": "object"
        }
      }
    },
    "toolchain": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "os",
        "arch"
      ],
      "properties": {
        "os": {
          "type": "string",
          "minLength": 1
        },
        "arch": {
          "type": "string",
          "minLength": 1
        },
        "python": {
          "type": "string"
        },
        "pcre2": {
          "type": "string"
        },
        "pysigma": {
          "type": "string"
        },
        "pysigma_pipeline": {
          "type": "string"
        }
      }
    },
    "fixtures": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fixture_id",
        "fixture_sha256"
      ],
      "properties": {
        "fixture_id": {
          "type": "string",
          "minLength": 1
        },
        "fixture_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "rules_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case_id",
          "rule_id",
          "status",
          "compiled_plan_sha256",
          "detections_sha256"
        ],
        "properties": {
          "case_id": {
            "type": "string",
            "minLength": 1
          },
          "rule_id": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "error",
              "skipped"
            ]
          },
          "compiled_plan_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "detections_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "mismatch": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "kind": {
                "type": "string",
                "enum": [
                  "plan_hash_mismatch",
                  "result_hash_mismatch"
                ]
              },
              "details": {
                "type": "string"
              }
            }
          },
          "error": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pass",
        "fail",
        "error",
        "skipped"
      ],
      "properties": {
        "pass": {
          "type": "integer",
          "minimum": 0
        },
        "fail": {
          "type": "integer",
          "minimum": 0
        },
        "error": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
