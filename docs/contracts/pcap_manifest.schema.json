{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purple-axiom.dev/contracts/pcap_manifest.schema.json",
  "title": "pcap_manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "run_id",
    "files"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "run_id": {
      "type": "string",
      "format": "uuid"
    },
    "source_type": {
      "type": "string",
      "const": "pcap"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^raw/pcap/"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{64}$"
          },
          "size_bytes": {
            "type": "integer",
            "minimum": 0
          },
          "content_type": {
            "type": "string"
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  }
}