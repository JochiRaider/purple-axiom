{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purple-axiom.local/schemas/ocsf_event_envelope.schema.json",
  "title": "Purple Axiom OCSF Event Envelope (Minimal Required Fields)",
  "description": "Validates the required provenance and a minimal OCSF-compatible core. Allows additional OCSF fields and vendor extensions.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "contract_version",
    "time",
    "class_uid",
    "metadata"
  ],
  "properties": {
    "time": {
      "type": "integer",
      "minimum": 0,
      "description": "Event time in milliseconds since Unix epoch (UTC)."
    },
    "time_dt": {
      "type": "string",
      "format": "date-time"
    },
    "class_uid": {
      "type": "integer",
      "minimum": 0
    },
    "category_uid": {
      "type": "integer",
      "minimum": 0
    },
    "type_uid": {
      "type": "integer",
      "minimum": 0
    },
    "severity_id": {
      "type": "integer",
      "minimum": 0
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "uid",
        "event_id",
        "run_id",
        "scenario_id",
        "collector_version",
        "normalizer_version",
        "source_type"
      ],
      "properties": {
        "event_id": {
          "type": "string",
          "pattern": "^pa:eid:v1:[A-Fa-f0-9]{32}$",
          "description": "Purple Axiom deterministic event identifier (pa:eid:v1:<128-bit-hex>). MUST equal metadata.uid (enforced at runtime)."
        },
        "uid": {
          "type": "string",
          "pattern": "^pa:eid:v1:[A-Fa-f0-9]{32}$",
          "description": "OCSF metadata.uid; MUST equal metadata.event_id (enforced at runtime)."
        },
        "run_id": {
          "type": "string",
          "format": "uuid"
        },
        "scenario_id": {
          "type": "string",
          "minLength": 1
        },
        "collector_version": {
          "type": "string",
          "minLength": 1
        },
        "normalizer_version": {
          "type": "string",
          "minLength": 1
        },
        "source_type": {
          "type": "string",
          "minLength": 1
        },
        "source_event_id": {
          "description": "Native/source event identifier when meaningful (e.g., Windows EventRecordID).",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "string",
              "pattern": "^\\d+$"
            },
            {
              "type": "string",
              "minLength": 1
            }
          ]
        },
        "observed_time_utc": {
          "type": "string",
          "format": "date-time",
          "description": "When the event was observed by the collector (diagnostic only; excluded from metadata.event_id)."
        },
        "ingest_id": {
          "type": "string",
          "format": "uuid",
          "description": "Optional ingestion-attempt identifier (debug only; never used for joins)."
        },
        "identity_tier": {
          "type": "integer",
          "enum": [
            1,
            2,
            3
          ],
          "description": "Identity tier used to compute metadata.event_id (1=native id, 2=cursor, 3=fingerprint)."
        },
        "time_precision": {
          "type": "string",
          "enum": [
            "s",
            "ms",
            "us",
            "ns"
          ],
          "description": "Precision of the event time field, as emitted by the source/collector."
        },
        "origin": {
          "type": "object",
          "additionalProperties": true,
          "description": "Optional identity inputs captured from the source system (recommended for auditability and EVTX reprocessing).",
          "properties": {
            "host": {
              "type": "string",
              "minLength": 1,
              "description": "Originating host/computer from the event payload."
            },
            "channel": {
              "type": "string",
              "minLength": 1,
              "description": "Windows channel/log name or equivalent stream name."
            },
            "record_id": {
              "oneOf": [
                {
                  "type": "integer",
                  "minimum": 0
                },
                {
                  "type": "string",
                  "pattern": "^\\d+$"
                }
              ],
              "description": "Windows EventRecordID / record number when available."
            },
            "provider": {
              "type": "string",
              "minLength": 1
            },
            "provider_guid": {
              "type": "string",
              "pattern": "^\\{?[A-Fa-f0-9]{8}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{12}\\}?$"
            },
            "event_id": {
              "type": "integer",
              "minimum": 0,
              "description": "Source-native event ID/type code when meaningful (e.g., Windows EventID)."
            }
          }
        },
        "host": {
          "type": "string"
        },
        "pipeline": {
          "type": "string"
        }
      },
      "dependentSchemas": {
        "origin": {
          "properties": {
            "origin": {
              "required": [
                "host",
                "channel"
              ]
            }
          }
        }
      }
    },
    "device": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "hostname": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        },
        "ip": {
          "type": "string"
        },
        "ips": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      }
    },
    "actor": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "user": {
          "type": "object",
          "additionalProperties": true
        },
        "process": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "raw": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional preserved raw/vendor fields for traceability."
    },
    "contract_version": {
      "type": "string",
      "const": "0.1.0",
      "description": "Contract version stamp for this event envelope."
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "metadata": {
            "properties": {
              "source_type": {
                "const": "windows_eventlog"
              }
            },
            "required": [
              "source_type"
            ]
          }
        },
        "required": [
          "metadata"
        ]
      },
      "then": {
        "properties": {
          "metadata": {
            "required": [
              "source_event_id"
            ],
            "properties": {
              "origin": {
                "required": [
                  "host",
                  "channel",
                  "record_id"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
