{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purple-axiom.local/contracts/criteria_pack_manifest.schema.json",
  "title": "Purple Axiom Criteria Pack Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract_version",
    "pack_id",
    "pack_version",
    "generated_at_utc",
    "criteria_count",
    "criteria_sha256"
  ],
  "properties": {
    "contract_version": {
      "const": "0.1.0"
    },
    "pack_id": {
      "type": "string",
      "minLength": 1
    },
    "pack_version": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "upstreams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "engine",
          "source_ref",
          "source_tree_sha256"
        ],
        "properties": {
          "engine": {
            "type": "string"
          },
          "source_ref": {
            "type": "string"
          },
          "source_tree_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    },
    "criteria_count": {
      "type": "integer",
      "minimum": 0
    },
    "criteria_sha256": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$"
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    },
    "placeholder": {
      "$ref": "#/$defs/pa_placeholder_v1"
    }
  },
  "$defs": {
    "pa_placeholder_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "placeholder_version",
        "handling",
        "reason_code",
        "reason_domain"
      ],
      "properties": {
        "placeholder_version": {
          "type": "string",
          "const": "pa.placeholder.v1"
        },
        "handling": {
          "type": "string",
          "enum": [
            "withheld",
            "quarantined",
            "absent"
          ]
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "reason_domain": {
          "type": "string",
          "const": "artifact_placeholder"
        },
        "sha256": {
          "type": "string",
          "pattern": "^sha256:[0-9a-f]{64}$"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "handling": {
                "const": "absent"
              }
            },
            "required": [
              "handling"
            ]
          },
          "then": {
            "properties": {
              "sha256": false
            }
          }
        }
      ]
    }
  }
}
